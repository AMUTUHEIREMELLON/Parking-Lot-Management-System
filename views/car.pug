doctype html
head
  link(rel='stylesheet' href='/css/bootstrap.css')
  link(rel='stylesheet' href='/css/car.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  title Booking Form
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

.booking
  h3 Personal cars
  form#formId(name='car' action='/api/regcar' onsubmit='return Validate()' method='POST')
    .row
      .col
        input#firstname.form-control(type='text' placeholder='First name' name='firstname')
        span#firstnameError
      .col
        input#lastname.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname')
        span#lastnameError
    .model
      label#inputGroup-sizing-sm.model(for='model') Car Model
      span#modelError
      input#model.form-control(type='text' name='model')
    .car-number
      span#numberPlateError
      label#ingroup-sizing.p-(for='numberplate') Car Number Plate
      input#numberplate.form-control(type='text' name='numberplate')
    .car-color
      span#colorError
      label#ingroup-sizing.p- Car Color
      input#color.form-control(type='text' name='color')
    .date
      span#dateError
      label#ingroupsizing.date Date
      input#date.form-control(type='date' name='date')
    .time
      span#timeError
      label#ingroup.color Time of arrival
      input#time.form-control(type='time' name='time')
    .slot
      span#slotnumberError
      label#slot-sizing.date Slot Number
      input#slotnumber.form-control(type='number' name='slotnumber')
    br
    select.form-select(aria-label='Default select example' name='cartype') 
      option(select='') Car type 
      option(value='car') Personal Car
      option(value='truck') Truck
      option(value='taxi') Taxi
      option(value='coaster') Coaster
    br
    select.form-select(aria-label='Default select example' name='services') 
      option(select='') Select Services 
      option(value='day') Day
      option(value='night') Night
      option(value='threehours') Less than three hours
    br
    select.form-select(aria-label='Default select example' name='cost') 
      option(select='') Select Cost 
      option(value='2000') Shs.2000
      option(value='3000') Shs.3000
      option(value='5000') Shs.5000
    br
    button.btn.btn-primary(type='submit' onsubmit='services.html') Sign Up
    br 
    a(href='/api/dash') < Back
  script(src='/js/car.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
